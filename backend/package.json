{
  "name": "param-backend",
  "version": "1.0.0",
  "description": "PARAM Academic Credential Management System - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "worker": "node dist/worker.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "verify-env": "tsx scripts/verify-env.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prestart": "npm run build"
  },
  "keywords": [
    "academic",
    "credentials",
    "blockchain",
    "nft",
    "privy"
  ],
  "author": "IIITM Gwalior",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@privy-io/server-auth": "^1.14.1",
    "@types/compression": "^1.8.1",
    "bullmq": "^5.34.8",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.14.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.2",
    "multer": "^2.0.0",
    "nanoid": "^5.1.0",
    "papaparse": "^5.4.1",
    "pdf-lib": "^1.17.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "puppeteer": "^24.6.1",
    "sharp": "^0.34.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "@types/papaparse": "^5.3.15",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "prisma": "^6.8.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
